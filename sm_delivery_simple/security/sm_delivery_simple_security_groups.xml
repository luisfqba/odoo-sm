<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="1">
        
        <record model="ir.module.category" id="module_sm_delivery_simple">
            <field name="name">Transportistas y Costos extra en Pedidos</field>
            <field name="description">User:Usuario limitado. Manager:Acceso completo</field>
            <field name="sequence">9999</field>
        </record>
        
        <record id="group_sm_delivery_simple_user" model="res.groups">
            <field name="name">User</field>
            <field name="comment">Este usuario esta limitado a crear y modificar registros</field>
            <field name="category_id" ref="module_sm_delivery_simple"/>
            <field name="implied_ids" eval="[(4, ref('base.group_sale_salesman'))]"/>
        </record>
        
        <record id="group_sm_delivery_simple_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="comment">Este usuario tiene acceso completo</field>
            <field name="category_id" ref="module_sm_delivery_simple"/>
            <field name="implied_ids" eval="[(4, ref('group_sm_delivery_simple_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>

	<record model="ir.rule" id="sm_delivery_simple_rule">
		<field name="name">sm_delivery_simple_rule</field>
		<field name="model_id" search="[('model','=','sm.delivery.costs.sale.line')]" model="ir.model"/>
		<field name="groups" eval="[(6,0,[ref('group_sm_delivery_simple_manager'), ref('group_sm_delivery_simple_user')])]"/>
	</record>
    </data>
</openerp>
